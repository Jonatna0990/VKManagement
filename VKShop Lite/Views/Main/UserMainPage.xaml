<Page
    x:Class="VKShop_Lite.Views.Main.UserMainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:VKShop_Lite.Views.Main"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid Background="CornflowerBlue" Height="40" VerticalAlignment="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="40*"/>
                <ColumnDefinition Width="290*"/>
                <ColumnDefinition Width="40*"/>
            </Grid.ColumnDefinitions>
            <ToggleButton x:Name="HamburgerButton" 
                FontFamily="Segoe MDL2 Assets"
                Content="&#xE700;"
                Margin="0"
                Width="40"
                Height="40"
                Background="Transparent"
                Foreground="Black"
                VerticalAlignment="Top"
                BorderThickness="0" Grid.ColumnSpan="2" />
            <TextBox Margin="5,0,5,0" Grid.Column="1" Background="White" SelectionHighlightColor="Red" BorderBrush="Transparent" Height="30" PlaceholderText="поиск..."></TextBox>
            <AppBarButton Grid.Column="2" Width="40" >
                <AppBarButton.Icon>
                    <SymbolIcon Margin="-5,-10,0,0" Symbol="Find" ></SymbolIcon>
                </AppBarButton.Icon>
            </AppBarButton>
        </Grid>

        <SplitView IsPaneOpen="{Binding ElementName=HamburgerButton,Path=IsChecked,Mode=TwoWay}"
                   CompactPaneLength="40"
                   OpenPaneLength="200"
                   DisplayMode="Overlay" Margin="0,40,0,0" PaneBackground="#FF636363">
            <SplitView.Pane>
                <StackPanel>
                    <StackPanel Margin="10">
                        <StackPanel Orientation="Horizontal" >
                            <Ellipse   Width="50" VerticalAlignment="Top" HorizontalAlignment="Left" Height="50">
                                <Ellipse.Fill>
                                    <ImageBrush>
                                        <ImageBrush.ImageSource>
                                            <ImageSource>ms-appx:///Assets/LockScreenLogo.png</ImageSource>
                                        </ImageBrush.ImageSource>
                                    </ImageBrush>
                                </Ellipse.Fill>
                            </Ellipse>
                            <StackPanel>
                                <TextBlock Style="{StaticResource SubtitleTextBlockStyle}" Text="Binding name}"></TextBlock>
                                <TextBlock Style="{StaticResource BaseTextBlockStyle}" Text="Binding description}"/>
                                <TextBlock Style="{StaticResource CaptionTextBlockStyle}" Text="Binding description}"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                    <ItemsControl 
                              Margin="0 48 0 0"
                              VerticalAlignment="Top">
                        <ListViewItem>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="40*"/>
                                    <ColumnDefinition Width="290*"/>
                                    <ColumnDefinition Width="40*"/>
                                </Grid.ColumnDefinitions>
                                <Image Source="ms-appx:///Icons/LeftMenu/speech95.png" ></Image>
                                <TextBlock Margin="5,0,0,0" Grid.Column="1" Style="{StaticResource TitleTextBlockStyle}" Text="группы"></TextBlock>
                            </Grid>
                        </ListViewItem>
                        <ListViewItem>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="40*"/>
                                    <ColumnDefinition Width="290*"/>
                                    <ColumnDefinition Width="40*"/>
                                </Grid.ColumnDefinitions>
                                <Image Source="ms-appx:///Icons/LeftMenu/speech95.png" ></Image>
                                <TextBlock Margin="5,0,0,0" Grid.Column="1" Style="{StaticResource TitleTextBlockStyle}" Text="сообщения"></TextBlock>
                            </Grid>
                        </ListViewItem>
                        <ListViewItem>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="40*"/>
                                    <ColumnDefinition Width="290*"/>
                                    <ColumnDefinition Width="40*"/>
                                </Grid.ColumnDefinitions>
                                <Image Source="ms-appx:///Icons/LeftMenu/speech95.png" ></Image>
                                <TextBlock Margin="5,0,0,0" Grid.Column="1" Style="{StaticResource TitleTextBlockStyle}" Text="настройки"></TextBlock>
                            </Grid>
                        </ListViewItem>

                    </ItemsControl>

                </StackPanel>
            </SplitView.Pane>
            <SplitView.Content>
                <Frame Canvas.ZIndex="1" x:Name="RootFrame">

                </Frame>
            </SplitView.Content>
        </SplitView>


    </Grid>
</Page>

