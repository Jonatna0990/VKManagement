                        <RadioButton.Content>
                            <TextBlock TextWrapping="Wrap" Width="250">
                            <Run Text="Открытая"/><LineBreak></LineBreak>
                            <Run  FontSize="12"  Text="При открытом доступе добавлять новые видеозаписи могут все участники сообщества." Foreground="#FF535353"/>
                            </TextBlock>
