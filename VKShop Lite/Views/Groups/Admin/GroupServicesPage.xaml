        <DataTemplate x:Key="EventTemplate">
            <Grid>
                <StackPanel   Orientation="Vertical">
                    <TextBlock Margin="0,5,0,5" Text="сообщения сообщества"></TextBlock>
                    <RadioButton Content="Выключены" Tag="0" Margin="0,5,0,5"/>
                    <RadioButton Content="Включены" Tag="1" Margin="0,5,0,5"/>


                    <TextBlock Margin="0,5,0,5" Text="стена"></TextBlock>
                    <RadioButton Content="Выключена" Tag="0" Margin="0,5,0,5"/>
                    <RadioButton Content="Открытая" Tag="1" Margin="0,5,0,5"/>
                    <RadioButton Content="Ограниченная" Tag="2" Margin="0,5,0,5"/>
                    <RadioButton Content="Закрытая" Tag="3" Margin="0,5,0,5"/>

                    <TextBlock Margin="0,5,0,5" Text="фотографии"></TextBlock>
                    <RadioButton Content="Выключена" Tag="0" Margin="0,5,0,5"/>
                    <RadioButton Content="Открытая" Tag="1" Margin="0,5,0,5"/>
                    <RadioButton Content="Ограниченная" Tag="2" Margin="0,5,0,5"/>


                    <TextBlock Margin="0,5,0,5" Text="видеозаписи"></TextBlock>
                    <RadioButton Content="Выключена" Tag="0" Margin="0,5,0,5"/>
                    <RadioButton Content="Открытая" Tag="1" Margin="0,5,0,5"/>
                    <RadioButton Content="Ограниченная" Tag="2" Margin="0,5,0,5"/>



                    <TextBlock Margin="0,5,0,5" Text="аудиозаписи"></TextBlock>
                    <RadioButton Content="Выключена" Tag="0" Margin="0,5,0,5"/>
                    <RadioButton Content="Открытая" Tag="1" Margin="0,5,0,5"/>
                    <RadioButton Content="Ограниченная" Tag="2" Margin="0,5,0,5"/>


                    <TextBlock Margin="0,5,0,5" Text="докуметы"></TextBlock>
                    <RadioButton Content="Выключена" Tag="0" Margin="0,5,0,5"/>
                    <RadioButton Content="Открытая" Tag="1" Margin="0,5,0,5"/>
                    <RadioButton Content="Ограниченная" Tag="2" Margin="0,5,0,5"/>


                    <TextBlock Margin="0,5,0,5" Text="обсуждения"></TextBlock>
                    <RadioButton Content="Выключена" Tag="0" Margin="0,5,0,5"/>
                    <RadioButton Content="Открытая" Tag="1" Margin="0,5,0,5"/>
                    <RadioButton Content="Ограниченная" Tag="2" Margin="0,5,0,5"/>


                    <TextBlock Margin="0,5,0,5" Text="материалы"></TextBlock>
                    <RadioButton Content="Выключена" Tag="0" Margin="0,5,0,5"/>
                    <RadioButton Content="Открытая" Tag="1" Margin="0,5,0,5"/>
                    <RadioButton Content="Ограниченная" Tag="2" Margin="0,5,0,5"/>



                    <TextBlock Margin="0,5,0,5" Text="тип встречи"></TextBlock>
                    <RadioButton Content="Открытая" Tag="0" Margin="0,5,0,5"/>
                    <RadioButton Content="закрытая" Tag="1" Margin="0,5,0,5"/>



                </StackPanel>
            </Grid>
        </DataTemplate>
        <DataTemplate x:Key="PageTemplate">
            <StackPanel>
                <TextBlock Margin="0,5,0,5" Text="сообщения сообщества"></TextBlock>
                <RadioButton Content="Выключены" Tag="0" Margin="0,5,0,5"/>
                <RadioButton Content="Включены" Tag="1" Margin="0,5,0,5"/>

                <CheckBox Content="ссылки"></CheckBox>
                <CheckBox Content="фотоальбомы"></CheckBox>
                <CheckBox Content="видеозаписи"></CheckBox>
                <CheckBox Content="аудиозаписи"></CheckBox>
                <CheckBox Content="обсуждения"></CheckBox>
                <CheckBox Content="мероприятия"></CheckBox>
                <CheckBox Content="места"></CheckBox>
                <CheckBox Content="контакты"></CheckBox>
                <CheckBox Content="товары"></CheckBox>
            </StackPanel>
        </DataTemplate>
        <converters:GroupCategoryTemplateSelector x:Key="CategoryTemplateSelector" EventTemplate="{StaticResource EventTemplate}" GroupTemplate="{StaticResource GroupTemplate}" PageTemplate="{StaticResource PageTemplate}"/>
    </Page.Resources>
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <ScrollViewer>
            <ContentPresenter   HorizontalAlignment="Stretch" Content="{Binding Group}" ContentTemplateSelector="{StaticResource CategoryTemplateSelector}" ></ContentPresenter>

        </ScrollViewer>
      
    </Grid>
