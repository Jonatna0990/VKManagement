<ContentDialog
    x:Class="VKShop_Lite.UserControls.PopupControl.About.PrivacyControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:VKCore.Localization"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" 
    Title="Политика конфединциальности" >

    <Grid Height="400">
        <ScrollViewer>
            <TextBlock Margin="0,0,0,100" MaxWidth="300" TextWrapping="Wrap" Text="{Binding  Path=LocalizedResources.Privacy, Source={StaticResource LocalizedStrings}}"></TextBlock>
        </ScrollViewer>
       
    </Grid>
</ContentDialog>
